<Window x:Class="Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_WPF"
        mc:Ignorable="d"
         Title="Client" Height="400" Width="600">
    <Grid>

        <TextBox Name="ChatBox" Margin="10,35,10,75" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
        <TextBox Name="MessageTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,320,80,10"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Margin="0,0,10,10" Click="btnSend_Click"/>
        <TextBox x:Name="txtInputip" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,10,0,0" Text="127.0.0.1"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="170,10,0,0" Click="btnConnect_Click"/>
        <Button Name="btnDisconnect" Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="260,10,0,0" Click="btnDisconnect_Click" IsEnabled="False"/>
        <Button Content="Invia Immagine" Margin="455,314,0,0" Click="SendButton_Click" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="135"/>
    </Grid>
</Window>