<Window x:Class="Server_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server_WPF"
        mc:Ignorable="d"
        Title="Server" Height="400" Width="600">
    <Grid>
        <TextBox Name="ChatBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,100" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <TextBox Name="ServerMessageTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,320,80,10"/>
        <Button Name="SendMessageButton" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Margin="0,0,10,10" Click="SendMessageButton_Click"/>
    </Grid>
</Window>